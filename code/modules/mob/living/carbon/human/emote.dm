	set name = "Set Pose"
	set desc = "Sets a description which will be shown when someone examines you."
	set category = "IC"

	var/datum/gender/T = gender_datums[get_visible_gender()]

	pose = sanitize(input(usr, "This is [src]. [T.he]...", "Pose", null)  as text)

